 <html>
    <head>
        <title>Login Service</title>
        <link href="/css/style.css" rel="stylesheet"/>
        <link href="/css/bootstrap.min.css" rel="stylesheet"/>
          
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" type="text/css" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  
<script>

  $(document).ready(function(){

    $('form[id="loginform"]').validate({

      rules: {
        username: {
           required: true,
           email: true
        },
        password: {
          required: true,
          minlength: 8
        }
      },
      messages: {
        fname: 'Enter a valid email'
      },

      submitHandler: function(form) {
        form.submit();
      }
    });
  });
</script>

</head>

<body>

<div class="container-fluid"> 
         <% include header.ejs %>

 <div class="row">

<div class="loginPanel">
  
    <h1>Sign in to your account</h1>

    <p>
          Your account will be used to access chatrooms, discussion platforms, meeting tables,
          and all other kinds of communication channels you need for your individual or organiztional basis.
    </p>


    <div class="row">

      <div class="col-md-7">
           <h6 style="margin-bottom: 20px;">Sign with chat account</h6>

           <% if(typeof errors == 'undefined') { %>


            <% } else  { %>

              <ul>
              <% errors.forEach(function(error){%>

                 <li><%=error.msg%></li>

              <%})%>
               
              </ul>
            
              <%}%>

          <form method="post" action="login" id="loginform">

            <div class="form-group">  
                  <input type="text" id="username" class="form-control" placeholder="Email or username" name="username" required/>
            </div>
            <div class="form-group">
              <input type="password" id="password" class="form-control" placeholder="Secret or password" name="password" required/>
            </div>
          
            <div class="form-group">
              <input type="checkbox"/> Remember Me
              <a href="" class="float-right">Forget my Password?</a>

            </div>

            <div class="form-group text-right">
              <button type="submit" class="badge badge-pill badge-primary" value="Login">Login </button>
            </div>
          </form>
    </div>
        <div class="col-md-5 small float-right" style="border-left: 1px solid lightgray; padding-left:20px;">
          <h6>Sign with your social accounts</h6>

     <a href=""> <i class="fa fa-facebook" style="font-size: 30px;"></i> Sign in with Facebook</a>
     <a href=""> <i class="fa fa-twitter" style="font-size: 30px;"></i> Sign in with Twitter</a>
     <a href=""> <i class="fa fa-google" style="font-size: 30px;"></i> Sign in with Gmail</a>

        </div>
   </div>
</div>

</div>

<div class="row">
  
 <div class="form-group text-center center">
        <a href="" class="badge badge-pill badge-primary" data-toggle="modal" data-target="#exampleModalCenter">Create an account </a>
 </div>
</div>
</div>


     <!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Create account</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
<div class="modal-body">
   <form method="post" action="signup">

  <div class="col-lg-12">

    <h2 style="margin-bottom: 30px;">Create your chat account</h2>

   

      <div class="form-group">  
            <input type="text" class="form-control" placeholder="First name" name="fname"/>
      </div>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Last name" name="lname"/>
      </div>
     <div class="form-group">
        <input type="text" class="form-control" placeholder="Email" name="email"/>
      </div>

    <div class="form-group">
        <input type="text" class="form-control" placeholder="Username" name="username"/>
    </div>
      <div class="form-group">
        <input type="password" class="form-control" placeholder="Secret or Password" name="password"/>
    </div>
      <div class="form-group">
        <input type="password" class="form-control" placeholder="Confirm password" name="confirmpassword"/>
    </div>

  </div>
      <div class="modal-footer">
       
        <button type="button" class="cancel" data-dismiss="modal"> <i class="fa fa-close"></i> Cancel</button>
        <button type="submit" class="button"><i class="fa fa-key"></i>  Create</button>
      </div>
   </form>
      </div>
    </div>
  </div>
</div>
   
</body>
  
    
</html>
